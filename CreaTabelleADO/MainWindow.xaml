<Window x:Class="CreaTabelleADO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreaTabelleADO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1" FontSize="16" Margin="10" Click="Button_Click1">1 - Cancellazione Tabelle</Button>
        <Button Grid.Column="1" Grid.Row="2" FontSize="16" Margin="10" Click="Button_Click2">2 - Creazione Tabelle</Button>
        <Button Grid.Column="1" Grid.Row="3" FontSize="16" Margin="10" Click="Button_Click3">3 - Cancellazione righe tabelle</Button>
        <Button Grid.Column="1" Grid.Row="4" FontSize="16" Margin="10" Click="Button_Click4">4 - Caricamento righe tabelle</Button>
        
        
    </Grid>
</Window>
